# If you come from bash you might have to change your $PATH.
# export PATH=$HOME/bin:/usr/local/bin:$PATH

export ZSH="$HOME/.oh-my-zsh"

ZSH_THEME="gallifrey"

plugins=(
    git
    archlinux
    zsh-autosuggestions
    zsh-syntax-highlighting
    dirhistory
    emotty
    emoji
)

source $ZSH/oh-my-zsh.sh

# Check archlinux plugin commands here
# https://github.com/ohmyzsh/ohmyzsh/tree/master/plugins/archlinux

# Display Pokemon-colorscripts
# Project page: https://gitlab.com/phoneybadger/pokemon-colorscripts#on-other-distros-and-macos
# pokemon-colorscripts --no-title -s -r

# fastfetch. Will be disabled if above colorscript was chosen to install
#fastfetch -c $HOME/.config/fastfetch/config-compact.jsonc

# Set-up icons for files/folders in terminal
alias ls='eza -a --icons'
alias ll='eza -al --icons'
alias lt='eza -a --tree --level=1 --icons'

# Set-up FZF key bindings (CTRL R for fuzzy history finder)
source <(fzf --zsh)

HISTFILE=~/.zsh_history
HISTSIZE=10000
SAVEHIST=10000
setopt appendhistory

#zoxide path
eval "$(zoxide init zsh)"

onedrive(){
    rclone mount OneDriveSTI: /media/onedrive/ --vfs-cache-mode writes &
}


dropbox(){
    rclone mount DropBox: /media/dropbox/ --vfs-cache-mode writes &
}

gdrive(){
    case "$1" in
        -p) rclone mount Gdrive-349: /media/Gdrive_Personal/ --vfs-cache-mode writes & ;;
        *) echo "Usage: gdrive -p (personal) | -w (work)" ;;
    esac
}

sync(){
    ~/Scripts/bin/Sync-Remote.sh
}

export PYENV_ROOT="$HOME/.pyenv"
export PATH="$PYENV_ROOT/bin:$PATH"
eval "$(pyenv init --path)"
eval "$(pyenv init -)"
eval "$(pyenv virtualenv-init -)"

bindkey -s '^[r' 'source ~/.zshrc\n'


alias money="~/Scripts/bin/MoneyManager.sh"
export PATH=$PATH:/home/marky/.local/share/bin:/home/marky/.local/share/JetBrains/Toolbox/scripts

alias evince="evince & disown"
export PATH=$PATH:/opt/google/chrome/

#tmux allias

tmuxnew() {
    tmux new-session -s $1
}

tmuxopen() {
    tmux attach -t $1
}

tmuxkill() {
    tmux kill-session -t $1
}

tmuxrename() {
    tmux rename-session -t $1 $2
}
